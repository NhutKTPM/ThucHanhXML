{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "employees": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "position": { "type": "string" },
          "salary": { "type": "number" },
          "status": {
            "type": "string",
            "enum": ["đang làm", "nghỉ việc"]
          }
        },
        "required": ["id", "name", "position", "salary", "status"]
      }
    }
  },
  "required": ["employees"]
}